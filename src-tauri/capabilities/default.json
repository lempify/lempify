{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "install_sudoers",
          "cmd": "osascript",
          "args": [
            "-e",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:event:default"
  ]
}
