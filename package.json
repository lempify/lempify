{
  "name": "lempify",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lempifyd": "pnpm lempifyd:build && pnpm lempifyd:rename",
    "lempifyd:build": "node scripts/lempifyd-build.ts",
    "lempifyd:rename": "node scripts/lempifyd-rename.ts",
    "lempifyd:watch": "cd src-tauri/ && cargo watch -w src/bin/lempifyd -x 'build --release --target aarch64-apple-darwin -p lempifyd --manifest-path src/bin/lempifyd/Cargo.toml' -s 'pnpm lempifyd:rename'",
    "lempify:dev": "pnpm lempifyd:build && pnpm tauri dev"
  },
  "dependencies": {
