{
  "name": "lempify",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "daemon:build": "node scripts/build-daemon.js",
    "daemon:watch": "cd src-tauri/ && cargo watch -w src/bin/lempifyd -x 'build --release --target aarch64-apple-darwin -p lempifyd --manifest-path src/bin/lempifyd/Cargo.toml' -s 'node ../scripts/rename-daemon.js'",
    "tauri:dev": "pnpm daemon:build && pnpm tauri dev"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "tailwindcss": "^4.1.3",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}